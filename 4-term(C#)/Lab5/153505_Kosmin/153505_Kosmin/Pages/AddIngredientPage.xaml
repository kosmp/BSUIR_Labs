<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_153505_Kosmin.Pages.AddIngredientPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="AddIngredientPage">
    <VerticalStackLayout>
        <HorizontalStackLayout>
            <Button Text="Choose Image" FontSize="25" Clicked="AddImage"/>
            <Image x:Name ="img" Source="default.png" Aspect="Center"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Ingredient Name: " FontSize="50"/>
            <Entry x:Name ="name" FontSize="50" TextColor="Crimson"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Ingredient RemainNum: " FontSize="50"/>
            <Entry x:Name ="num" FontSize="50" TextColor="Crimson"/>
        </HorizontalStackLayout>
        <Button Text="Add"  Clicked="AddEvent"/>
    </VerticalStackLayout>
</ContentPage>