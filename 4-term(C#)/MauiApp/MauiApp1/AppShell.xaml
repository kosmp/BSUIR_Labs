<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp1">

    <FlyoutItem Title="Calculator">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="ProgressBar">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:ProgressBar}" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="DataBase">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:CocktailStorage}" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="CurrencyConverter">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:Converter}" />
        </Tab>
    </FlyoutItem>
</Shell>
